@model TaskNationalQuality.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <!-- Page Title -->
    <h2 class="text-center mb-4">Confirm Deletion</h2>

    <!-- Card for Product Details -->
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4>Are you sure you want to delete this product?</h4>
        </div>
        <div class="card-body">
            <!-- Product Details -->
            <div class="mb-4">
                <h5>Product Details</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">Name:</dt>
                    <dd class="col-sm-10">@Model.Name</dd>

                    <dt class="col-sm-2">Price:</dt>
                    <dd class="col-sm-10">@Model.Price</dd>
                </dl>
            </div>

            <!-- Action Buttons -->
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


