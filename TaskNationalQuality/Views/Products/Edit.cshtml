@model TaskNationalQuality.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <!-- Page Title -->
    <h2 class="text-center mb-4">Edit Product</h2>

    <!-- Card for Edit Product -->
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white">
            <h4>Edit Product Information</h4>
        </div>
        <div class="card-body">
            <!-- Edit Product Form -->
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Product Name</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Product Price</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-warning btn-lg">Update</button>
                </div>

                <!-- Cancel Button -->
                <div class="form-group text-center">
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


