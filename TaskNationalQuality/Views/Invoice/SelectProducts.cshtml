@model List<TaskNationalQuality.Models.Product>

@{
    ViewData["Title"] = "Select Products";
}

<div class="container mt-5">
    <!-- Page Title -->
    <h2 class="text-center mb-4">Select Products</h2>

    <!-- Product Selection Form -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Select a Product</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label for="productSelect">Choose a Product:</label>
                    <select id="productSelect" name="selectedProductId" class="form-control">
                        <option value="0">-- Select a Product --</option>
                        @foreach (var item in ViewBag.ProductsList as SelectList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Add Product</button>
            </form>
        </div>
    </div>

    <br />

    <!-- Display Selected Products -->
    @if (Model.Count > 0)
    {
        <h3 class="mt-5">Selected Products</h3>
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Price</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

